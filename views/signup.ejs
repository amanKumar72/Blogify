<!DOCTYPE html>
<html lang="en">
  <head>
    <%-include('partials/head') %>
    <title>SignUp</title>
  </head>
  <body>
    <%-include('partials/header') %>
    <div class="container">
      <% if (error) { %>
        <div class="alert alert-danger" role="alert">
          <%= error %>
        </div>
      <% } %> 
        <form action="/api/auth/signup" method="post" enctype="multipart/form-data">
      <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input
        required
          type="name"
          class="form-control"
          name="name"
          id="name"  
        />
        <label for="email" class="form-label">Email address</label>
        <input
        required
          type="email"
          class="form-control"
          name="email"
          id="email"
        />
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
        required
          type="password"
          class="form-control"
          name="password"
          id="password"
        />
      </div>
      <div class="mb-3">
        <label for="file" class="form-label">Profile Picture</label>
        <input
          type="file"
          class="form-control"
          name="file"
          id="file"
        />
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    <p>Already have an account? <a href="/signin">Sign in</a></p>
    </div>

    <%-include('partials/script') %>
  </body>
</html>

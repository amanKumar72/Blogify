<!DOCTYPE html>
<html lang="en">
  <head>
    <%-include('partials/head') %>
    <title>Edit Profile</title>
  </head>
  <body>
    <%-include('partials/header') %>
    <div class="container">
      <% if (error) { %>
        <div class="alert alert-danger" role="alert">
          <%= error %>
        </div>
      <% } %> 
        <form action="/api/user/editProfile" method="post" enctype="multipart/form-data">
      <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input
        required
          type="name"
          class="form-control"
          name="name"
          id="name" 
          value='<%=req.user.name%>'  
        />
        <label for="email" class="form-label">Email address</label>
        <input
        required
          type="email"
          class="form-control"
          name="email"
          id="email"
          value=<%=req.user.email%>  
        />
      <div class="mb-3">
        <label for="file" class="form-label">Profile Picture</label>
        <input
          type="file"
          class="form-control"
          name="file"
          id="file"
          required
        />
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    </div>

    <%-include('partials/script') %>
  </body>
</html>
